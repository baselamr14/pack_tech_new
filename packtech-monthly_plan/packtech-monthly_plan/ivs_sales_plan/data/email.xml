<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="sales_plan_email_template" model="mail.template">
        <field name="name">Sales Plan Review {{ object.name }} </field>
        <field name="model_id" ref="ivs_sales_plan.model_sales_plan"/>
        <field name="body_html" type="html">
            <table border="0" cellpadding="0" cellspacing="0" style="width:100%; margin:0px auto;">
                <tbody>
                    <tr>
                        <td valign="top" style="text-align: left; font-size: 14px;">
                            <a t-attf-href="{{object.get_base_url()}}/{{object._absloute_url()}}" target="_blank" t-out="object.name or ''">{{ object.name }}</a>
                            <p> Plan ID: <t t-out="object.id" /> </p>
                        </td>
                    </tr>
                    <tr>
                        <td valign="top" style="text-align: left; font-size: 14px;">
                            Have a nice day,<br/>
                            The HR Team
                        </td>
                    </tr>
                </tbody>
            </table>
        </field>
        <!-- <field name="lang">{{ object.address_home_id.lang }}</field> -->
        <field name="auto_delete" eval="False"/>
    </record>

